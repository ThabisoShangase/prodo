<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="za.co.thecompany.mapping.FileInfo" table="file_info" schema="prodo_data">
        <id name="fileId" column="file_id">
            <generator class="identity"/>
        </id>
        <property name="fileName" column="file_name"/>
        <property name="fileNize" column="file_nize"/>
        <property name="filePath" column="file_path"/>
        <set name="commentFiles" inverse="true">
            <key>
                <column name="file_id"/>
            </key>
            <one-to-many not-found="ignore" class="za.co.thecompany.mapping.CommentFile"/>
        </set>
        <set name="portfolioAssociatedFiles" inverse="true">
            <key>
                <column name="file_id"/>
            </key>
            <one-to-many not-found="ignore" class="za.co.thecompany.mapping.PortfolioAssociatedFile"/>
        </set>
        <set name="postFiles" inverse="true">
            <key>
                <column name="file_id"/>
            </key>
            <one-to-many not-found="ignore" class="za.co.thecompany.mapping.PostFile"/>
        </set>
    </class>
</hibernate-mapping>