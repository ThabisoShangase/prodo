<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="za.co.thecompany.mapping.Portfolio" table="portfolio" schema="prodo_data">
        <id name="portfolioId" column="portfolio_id"/>
        <property name="heading" column="heading"/>
        <property name="userId" column="user_id"/>
        <many-to-one name="userInfo" class="za.co.thecompany.mapping.UserInfo">
            <column name="user_id"/>
        </many-to-one>
        <set name="portfolioAssociatedFiles" inverse="true">
            <key>
                <column name="portfolio_id"/>
            </key>
            <one-to-many not-found="ignore" class="za.co.thecompany.mapping.PortfolioAssociatedFile"/>
        </set>
    </class>
</hibernate-mapping>