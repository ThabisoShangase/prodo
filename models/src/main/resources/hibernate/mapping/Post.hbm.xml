<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="za.co.thecompany.mapping.Post" table="post" schema="prodo_data">
        <id name="postId" column="post_id"/>
        <property name="postDate" column="post_date"/>
        <property name="userId" column="user_id"/>
        <property name="postMessage" column="post_message"/>
        <many-to-one name="userInfo" class="za.co.thecompany.mapping.UserInfo">
            <column name="user_id"/>
        </many-to-one>
        <set name="commentInfos" inverse="true">
            <key>
                <column name="post_id"/>
            </key>
            <one-to-many not-found="ignore" class="za.co.thecompany.mapping.CommentInfo"/>
        </set>
        <set name="postFiles" inverse="true">
            <key>
                <column name="post_id"/>
            </key>
            <one-to-many not-found="ignore" class="za.co.thecompany.mapping.PostFile"/>
        </set>
    </class>
</hibernate-mapping>