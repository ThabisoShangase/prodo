<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="za.co.thecompany.mapping.CommentInfo" table="comment_info" schema="prodo_data">
        <id name="commentId" column="comment_id"/>
        <property name="commentMessage" column="comment_message"/>
        <property name="postId" column="post_id"/>
        <many-to-one name="post" class="za.co.thecompany.mapping.Post">
            <column name="post_id"/>
        </many-to-one>
        <set name="commentFiles" inverse="true">
            <key>
                <column name="comment_id"/>
            </key>
            <one-to-many not-found="ignore" class="za.co.thecompany.mapping.CommentFile"/>
        </set>
    </class>
</hibernate-mapping>